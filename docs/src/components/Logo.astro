---
import { parse } from "node-html-parser";

export interface Props {
  class?: string;
  width?: string;
  height?: string;
}

const attributes = Astro.props;
const { default: innerHTML } = await import(`../assets/logo.svg?raw`);

const { attributes: baseAttributes, innerHTML: svgInnerHTML } =
  parse(innerHTML).querySelector("svg")!;

const svgAttributes = { ...baseAttributes, ...attributes };
---

<svg {...svgAttributes} set:html={svgInnerHTML}></svg>
